QPushButton
{
    background-color:#1d1d1d;
    color:  #ECECEC;
    border-radius: 10px;
    padding: 5px;

    min-height: 15px;
    min-width: 15px;

    font-weight:bold;
    text-transform: uppercase;
}

QPushButton::hover
{
     background-color: #BFBFBF;
     border: 2px solid#1d1d1d;
}

QPushButton::pressed
{
     background-color: #BFBFBF;
     border: 4px solid#1d1d1d;
}

